# With this, everytime the ssh command is run, the TTY
# variable is updated and our gpg-agent (who we set 
# up to take over the role of the ssh-agent) will ask
# for a passphrase via pinentry-curses from the same
# terminal the ssh command was run
Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"

# Public github key
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519

# Home server
Host fatdell
    Hostname 192.168.1.15
    IdentitiesOnly yes
    IdentityFile id_rsa

# Public gitlab key
Host gitlab.com
    PreferredAuthentications publickey
    IdentityFile gitlab_com_rsa
